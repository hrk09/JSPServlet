package com.edu.test;

import java.io.*;
import javax.servlet.*;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;

@WebServlet("/test1")
public class Test1 extends HttpServlet{
	//GET 방식으로 요청시 HttpServlet 의 service() 메소드에 의해 호출되는 메소드
	public void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		resp.setContentType("text/html;charset=UTF-8");
		PrintWriter out = resp.getWriter();
		out.print("<h1>Get 방식으로 요청됨</h1>");
		out.print(req.getRemoteAddr()); //ip 값 받는 메소드
		
		out.print("<h1>"+req.getRequestURI()); 
		out.print("<h1>"+req.getRequestURL()); 
		out.print("<h1>"+req.getContextPath()); 
		out.print("<h1>"+req.getServletPath()); 
		out.close();
	}
}
