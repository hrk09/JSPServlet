  <servlet-mapping> <!-- servlet url 만들기 -->
  		<servlet-name>first</servlet-name>
  		<url-pattern>/hello</url-pattern> <!-- http://127.0.0.1:8080/edu/hello 검색하면 이 FirstServlet 서블릿 실행해줘-->
  		<!-- url-pattern 시 "/" 빼먹지 말기!!! -->
  </servlet-mapping>
